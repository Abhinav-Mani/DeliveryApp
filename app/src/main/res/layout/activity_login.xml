<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:background="@drawable/delivery"
        android:orientation="vertical"
        tools:context=".Activities.LoginActivity">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_margin="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout

                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/name"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name" />
                <EditText
                    android:layout_below="@+id/name"
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address" />

                <EditText
                    android:layout_below="@+id/address"
                    android:id="@+id/phoneno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone No" />

                <Button
                    android:background="@drawable/round_bg_grey"
                    android:layout_below="@+id/phoneno"
                    android:id="@+id/loginsubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOGIN" />

                <EditText
                    android:layout_below="@+id/loginsubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/verficatioCode"
                    android:hint="VerificationCode"
                    />
                <Button
                    android:layout_below="@+id/verficatioCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verify"
                    android:id="@+id/verify"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </ScrollView>
    </LinearLayout>







